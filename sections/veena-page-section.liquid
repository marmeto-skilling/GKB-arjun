{{'image-with-veena-product.css' |  asset_url  |  stylesheet_tag}}


<section class="new-hotspot-image-with-product-slider max-width-1500 mx-auto"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="product-grid">
    {% for block in section.blocks %}
      {% if block.type == 'product' %}
        <div class="product-details">
          <!-- Product Image -->
          <div class="product-image">
            <img src="{{ block.settings.image | image_url }}" alt="Product Image">
          </div>
          <!-- Product Heading -->
          <div class="product-heading">
            <h2>{{ block.settings.heading }}</h2>
          </div>
          <!-- Product Description -->
          <div class="product-description">
            {{ block.settings.description }}
          </div>
          <!-- Button -->
          {% if block.settings.button_label != blank %}
            <div class="product-button">
              <a href="{{ block.settings.button_url }}"
                 class="btn"
                 style="background-color: {{ block.settings.button_background }};">
                 {{ block.settings.button_label }}
              </a>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Hotspot product slider",
  "class": "new-hotspot-image-with-product-slider max-width-1500 mx-auto",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "product details",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1200 x 640px - Recommended dimensions"
        },
        {
          "type": "header",
          "content": "Details"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p></p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "button text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "button link"
        },
        {
          "type": "color",
          "id": "button_background",
          "label": "button background"
        }
      ]
    }
  ],
  "presets": [{ "name": "New Hotspot Images" }]
}
{% endschema %}